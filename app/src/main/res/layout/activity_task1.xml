<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/activity_task1_button_task1_edit_text_send"
        android:hint="@string/activity_task1_button_task1_edit_text_send_hint"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>


    <Button
        android:id="@+id/activity_task1_button_task1_second_activity"
        android:text="@string/activity_task1_button_task1_second_activity"
        android:layout_width="100dp"
        android:layout_height="45dp"/>

</LinearLayout>